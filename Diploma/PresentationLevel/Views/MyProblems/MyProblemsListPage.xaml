<Page
    x:Class="PresentationLevel.Pages.MyProblems.MyProblemsListPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:local="using:ProblemManager.Dtos"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <ScrollViewer>
            <StackPanel>
                <TextBlock x:Name="ProblemName" FontWeight="Bold"></TextBlock>
                <TextBlock x:Name="AltCount"></TextBlock>
                <TextBlock x:Name="XCount"></TextBlock>
                <TextBlock x:Name="ConstrCount"></TextBlock>
                <TextBlock x:Name="OptDirection"></TextBlock>
                <TextBlock x:Name="Comment"></TextBlock>
                <Button Click="FileInput_Click">Відкрити файл з вхідними даними</Button>
                <Button Click="FileOutput_Click">Відкрити файл з вихідними даними</Button>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>
